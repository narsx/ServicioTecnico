{% block stylesheets %}

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="container col-3">
        <!---heading-->
        <header class="heading"><h3 class="text-center"> Registro de Usuario</h3></header><hr></hr>
        
        <!---Form starting--> 
        {{ form_errors(form) }}
        <div class="container">
        <!--- For Name-->

        <div class="row">
            <div class="col-12">
                 <label for="uname" class="form-label"><b>Nombre de usuario</b></label>
                   
                {{ form_widget(form.nombre,{ 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="uname" class="form-label"><b>Apellidos</b></label>
                
                {{ form_widget(form.apellidos,{ 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="uname" class="form-label"><b>Email</b></label>
                
                {{ form_widget(form.email,{ 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="uname" class="form-label"><b>Password</b></label>
                
                    {{ form_widget(form.password,{ 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

    <div class="row">
        <div class="col-12">
              <label for="uname" class="form-label"><b>Introduce un avatar</b></label>
              
              {{ form_widget(form.foto,{ 'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <label for="uname" class="form-label"><b>Introduce el rol</b></label>
              
            {{ form_widget(form.roles) }}
        </div>
    </div>


<!---For Phone number-->

<div class="row">
    <div class="col-12">
        <label for="uname" class="form-label"><b>Introduce el telefono</b></label>
        {{ form_row(form.telefono) }}
    </div>
</div>
        </div>
   <div class="row">
        <div class="col-12">
    {{ form_row(form.registrar, { 'label': 'Registrar' }) }}
</div>

</div>
</div>


{{ form_end(form) }}
{% endblock %}
