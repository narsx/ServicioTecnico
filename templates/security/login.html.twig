{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="example-wrapper">
        <div class="container">
            <div class="d-flex justify-content-center h-100">
                <div class="card mt-5">
                    <div class="card-header">
                        <h3>Iniciar Sesión</h3>
                    </div>
                    <div class="card-body ">
                        <form method="POST">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Usuario">
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contraseña">
                            </div>
                            <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="row align-items-center remember justify-content-center">
                                <input type="checkbox" id="remember_me" name="_remember_me">Recordar usuario
                            </div>
                             <div class="row align-items-center remember justify-content-center">
                                  <input type="submit" value="Login" class="btn col-10 btn-primary  mt-2">
                            </div>
                            <div class="form-group">
                               
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            ¿No tienes ninguna cuenta?<a href="{{path('registrar')}}"> Registrarse</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
